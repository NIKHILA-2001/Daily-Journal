<%- include("partials/header"); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <div class="mb-3 form-group">
            <label class="form-label">Title</label>
            <input name="contentTitle" autocomplete="off" autocapitalize="on" class="form-control" type="text">
          </div>
          <div class="mb-3 form-group">
            <label class="form-label" >Post</label>
            <textarea name="contentBody" class="form-control" rows="5" autocomplete="off"></textarea>
        </div>
    </div>
    <button type="submit" class="btn btn-primary m-4">Publish</button>
</form>

<%- include("partials/footer"); -%>